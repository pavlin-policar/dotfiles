
[colors]
background = ${xrdb:background:#1d1d1d}
foreground = ${xrdb:foreground:#aaaaaa}
foreground_active = ${xrdb:foreground_active:#aaaaaa}
foreground_normal = ${xrdb:foreground_normal:#666666}
foreground_inactive = ${xrdb:foreground_inactive:#333333}

accent = ${xrdb:accent:#4586FF}
urgent = ${xrdb:urgent:#E04848}


[bar/base]
enable-ipc = true

width = 100%
padding = 2
module-margin = 2

fixed-center = true


[bar/top]
inherit = bar/base

font-0 = "Operator Mono Book:size=10;0"
font-1 = "unifont:fontformat=truetype:size=10:antialias=true;1"
font-2 = "Font Awesome 5 Free:style=Solid:size=10;1"

height = 28

background = ${colors.background}
foreground = ${colors.foreground}

modules-center = date
modules-right = volume xbacklight updates gmail wired-network wireless-network cpu memory temperature battery


[bar/bottom]
inherit = bar/base

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

font-0 = "Operator Mono Book:size=12;2"
font-1 = "unifont:fontformat=truetype:size=10:antialias=true;0"
font-2 = "Font Awesome 5 Free:style=Solid:size=12;0"

bottom = true

height = 42

background = #00000000
foreground = ${colors.foreground_inactive}

line-size = 24

modules-center = i3


[module/i3]
type = internal/i3

strip-wsnumbers = true
enable-click = true
enable-scroll = true
wrapping-scroll = false

; Figure out a way to separate out <label-mode> to own module
format = <label-state>

label-focused = " %name% "
label-focused-foreground = ${colors.foreground_active}
label-focused-padding = 1

label-unfocused = " %name% "
label-unfocused-foreground = ${colors.foreground_inactive}
label-unfocused-padding = 1

label-visible = " %name% "
label-visible-padding = 1

label-urgent = " %name% "
label-urgent-foreground = ${colors.urgent}
label-urgent-padding = 1


[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %H:%M


[module/battery]
type = internal/battery

battery = BAT1
adapter = ACAD

format-charging = <ramp-capacity> <label-charging>
label-charging = %percentage:3%%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage:3%%

format-full = <ramp-capacity> <label-full>
label-full = %percentage:3%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/temperature]
type = internal/temperature

format = <label>
label =  %temperature-c%

format-warn = <label-warn>
label-warn =  %temperature-c%
label-warn-foreground = ${colors.urgent}


[module/cpu]
type = internal/cpu

format = <label>

label =  %percentage:2%%


[module/memory]
type = internal/memory

format = <label>

label = RAM %gb_free%


[module/wired-network]
type = internal/network
interface = enp9s0


[module/wireless-network]
type = internal/network
interface = wlp8s0

label-connected =  %downspeed:8%  %upspeed:8% 

label-disconnected = not connected
label-disconnected-foreground = #66ffffff


[module/volume]
type = internal/volume

format-volume =  <label-volume>

label-volume = %percentage:3%%

label-muted = MUTE
label-muted-foreground = ${colors.foreground_normal}


[module/xbacklight]
type = internal/xbacklight

card = intel_backlight
enable-scroll = true

format = <ramp> <label>
label = %percentage:3%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/updates]
type = custom/script
exec = $HOME/.config/polybar/bin/checkupdates
; TODO: Execute only if connected to any network
;exec-if = pgrep -x myservice
interval = 120

click-left = termite -t Update -e "zsh -c \"pacaur -Syu\""

format =  <label>
format-foreground = ${colors.accent}
format-padding = 1

label = %output%


[module/gmail]
type = custom/script
exec = $HOME/.config/polybar/bin/gmail
; TODO: Execute only if connected to any network
;exec-if = pgrep -x myservice
interval = 120

format =  <label>
format-foreground = ${colors.accent}
format-padding = 1

label = %output%

